@model IdentityRoleEdit

<h1 class="bg-dark text-light">Editera Rollen</h1>
<a asp-action="ListAllRoles" class="btn btn-secondary">Tillbaka</a>
<div asp-validation-summary="All" class="text-danger"></div>

<form method="post">
    <input type="hidden" name="roleName" value="@Model.Role.Name" />
    <input type="hidden" name="roleId" value="@Model.Role.Id" />

    <h2 class="bg-dark text-light p-1">Lägg till i Rollen "@Model.Role.Name"</h2>
    <table class="table table-bordered table-sm">
        @if (Model.NonMembers.Count() == 0)
        {
            <tr><td colspan="2">Alla användare i Rollen</td></tr>
        }
        else
        {
            @foreach (IdentityAppUser user in Model.NonMembers)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>
                        <input type="checkbox" name="AddIds" value="@user.Id">
                    </td>
                </tr>
            }
        }
    </table>

    <h2 class="bg-dark text-light p-1">Ta bort från Roll "@Model.Role.Name"</h2>
    <table class="table table-bordered table-sm">
        @if (Model.Members.Count() == 0)
        {
            <tr><td colspan="2">Inga användare i Rollen</td></tr>
        }
        else
        {
            @foreach (IdentityAppUser user in Model.Members)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>
                        <input type="checkbox" name="DeleteIds" value="@user.Id">
                    </td>
                </tr>
            }
        }
    </table>
    <button type="submit" class="btn btn-primary">Spara Ändringar</button>
</form>