@model IEnumerable<IdentityRole>

<h1 class="bg-dark text-light">All Roles</h1>
<a asp-action="Create" class="btn btn-secondary">Skapa ny Roll</a>

<table class="table table-sm table-bordered table-bordered">
    <tr><th>ID</th><th>RollNamn</th><th>Användare</th><th>Editera</th><th>Radera</th></tr>
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Id</td>
            <td>@role.Name</td>
            <td i-role="@role.Id"></td>
            <td><a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@role.Id">Editera</a></td>
            @if (User.IsInRole("SuperAdmin"))
                {
            <td>
                <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Radera
                    </button>
                </form>
            </td>
                }
        </tr>
    }
</table>